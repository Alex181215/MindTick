<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/card_color"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Верхняя часть: Название задачи + Переключатель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название задачи"
                android:textSize="18sp"
                android:textColor="@color/category"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivPriorityR"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/bookmark_red" />

            <ImageView
                android:id="@+id/ivPriorityO"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/bookmark_orange" />

            <ImageView
                android:id="@+id/ivPriorityB"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/bookmark_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp">

            <!-- Дата и время напоминания -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:text="Дата: 20.03.2025, Время: 14:30"
                android:textSize="14sp"
                android:textColor="@color/title_text" />

            <Switch
                android:visibility="gone"
                android:id="@+id/switchReminder"
                android:thumbTint="@drawable/switch_thumb"
                android:trackTint="@drawable/switch_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- Описание задачи (если есть) -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Краткое описание задачи"
            android:textColor="@color/all_text"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
